RewriteEngine On

# Prevent HTTPS redirection (in case there is a global redirect rule somewhere else)

# Other existing rules below...
RewriteCond %{HTTP:Authorization} ^(.*)
RewriteRule .* - [e=HTTP_AUTHORIZATION:%1]

# Handle CORS (Cross-Origin Resource Sharing)
Header always set Access-Control-Allow-Origin "http://localhost:5173"
Header always set Access-Control-Allow-Headers "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"

# Handle routing to index.php for non-file requests
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
